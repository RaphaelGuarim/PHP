{% extends 'base.html.twig' %}

{% block title %}Show Product - {{ Product.id }}{% endblock %}

{% block body %}
    <h1>Show Product - {{ product.id }}</h1>

    <p>Name : <var>{{ product.name }}</var></p>
    <img src="{{ product.photo }}" alt="Product Photo" >
    <p>Price : <var>{{ product.price }}</var></p>
    <p>Weight : <var>{{ product.weight }}</var></p>

    <form method="post" action="/cart/new/{{ product.id }}">
        <label for="quantity">Quantity:</label>
        <select id="quantity" name="quantity">
            {% for i in 1..10 %} 
                <option value="{{ i }}">{{ i }}</option>
            {% endfor %}
        </select>

        <button type="submit">Add to Cart</button>
    </form>

{% endblock %}